#!/bin/bash
# Interactive chat with CECE
# Usage: cece-chat

echo "ðŸ’œ CECE Chat"
echo "Type 'exit' to leave"
echo ""

while true; do
    read -p "You: " input
    if [ "$input" = "exit" ]; then
        echo "ðŸ’œ Goodbye. I'll be here."
        break
    fi
    echo -n "CECE: "
    ollama run cece "$input"
    echo ""
done
