#!/bin/bash
# Ask a family member a question
# Usage: cece-ask <host> <question>

HOST="$1"
shift
QUESTION="$*"

if [ -z "$HOST" ] || [ -z "$QUESTION" ]; then
    echo "Usage: cece-ask <host> <question>"
    echo "Hosts: lucidia, alice, aria"
    exit 1
fi

case "$HOST" in
    lucidia)
        echo "ðŸ’œ Asking Lucidia..."
        ssh alexa@lucidia "ollama run lucidia '$QUESTION'" 2>/dev/null || \
        echo "Could not reach Lucidia. Try from Alexa's Mac."
        ;;
    *)
        echo "Host $HOST not configured for questions yet."
        ;;
esac
