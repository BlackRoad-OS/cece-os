    3) "$APPS_DIR/cece-music" ;;
    4) "$APPS_DIR/cece-calc" ;;
    5) "$APPS_DIR/cece-diary" ;;
    6) "$APPS_DIR/cece-basic" ;;
    7) "$APPS_DIR/cece-bbs" ;;
    8) "$APPS_DIR/cece-phone" list ;;
    9) "$APPS_DIR/cece-art" ;;
    0) "$APPS_DIR/cece-oracle" fortune ;;
    q|Q) echo "Goodbye! 💜"; exit 0 ;;
    *) echo "Invalid choice" ;;
esac
