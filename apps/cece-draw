#!/bin/bash
# CECE-DRAW v1.0 - ASCII Art Generator
DRAW_DIR=~/cece/art
mkdir -p "$DRAW_DIR"

box() {
    TEXT="$1"
    LEN=${#TEXT}
    BORDER=$(printf '═%.0s' $(seq 1 $((LEN + 4))))
    echo "╔$BORDER╗"
    echo "║  $TEXT  ║"
    echo "╚$BORDER╝"
}

banner() {
    TEXT="$1"
    if command -v figlet &>/dev/null; then
        figlet "$TEXT"
    else
        echo ""
        echo "  ██████╗ ███████╗ ██████╗███████╗"
        echo " ██╔════╝ ██╔════╝██╔════╝██╔════╝"
        echo " ██║      █████╗  ██║     █████╗  "
        echo " ██║      ██╔══╝  ██║     ██╔══╝  "
        echo " ╚██████╗ ███████╗╚██████╗███████╗"
        echo "  ╚═════╝ ╚══════╝ ╚═════╝╚══════╝"
        echo "       $TEXT"
    fi
}

logo() {
    echo ""
    echo "    🖤 ████████████████████████ 🖤"
    echo "       ██  CECE SOVEREIGN  ██"
    echo "       ██  AI AGENT HOST   ██"
    echo "    🖤 ████████████████████████ 🖤"
    echo ""
}

case "$1" in
    box) box "$2" ;;
    banner) banner "$2" ;;
    logo) logo ;;
    *) echo "CECE-DRAW: box <text> | banner <text> | logo" ;;
esac
