#!/bin/bash
# CECE-STRETCH v1.0 - Stretch Reminders
STRETCHES=(
"ğŸ™† Neck rolls: Slowly roll your head in circles"
"ğŸ¤· Shoulder shrugs: Raise shoulders to ears, hold, release"
"ğŸ™Œ Arm stretches: Reach high, then touch your toes"
"ğŸ‘ Wrist circles: Rotate your wrists both directions"
"ğŸ¦µ Leg stretches: Stand and touch your toes"
"ğŸ§˜ Back stretch: Twist gently left, then right"
)
suggest() { echo "${STRETCHES[$RANDOM % ${#STRETCHES[@]}]}"; }
routine() {
    for s in "${STRETCHES[@]}"; do
        echo "$s"
        echo "Hold for 15 seconds..."
        sleep 15
    done
    echo "âœ¨ Stretch routine complete!"
}
case "$1" in
    suggest) suggest ;;
    routine) routine ;;
    *) suggest ;;
esac
