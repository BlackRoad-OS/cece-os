#!/bin/bash
# CECE-REACTION v1.0 - Reaction Test
test() {
    echo "Wait for GO..."
    sleep $((RANDOM % 5 + 2))
    START=$(date +%s%N)
    echo "GO! Press Enter!"
    read
    END=$(date +%s%N)
    MS=$(((END - START) / 1000000))
    echo "âš¡ Reaction time: ${MS}ms"
}
case "$1" in *) test ;; esac
