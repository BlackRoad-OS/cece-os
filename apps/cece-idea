#!/bin/bash
# CECE-IDEA v1.0 - Idea Capture
IDEAS_FILE=~/cece/ideas.jsonl
capture() {
    echo "{\"idea\":\"$1\",\"time\":\"$(date -Iseconds)\"}" >> "$IDEAS_FILE"
    echo "ðŸ’¡ Idea captured!"
}
list() { tail -10 "$IDEAS_FILE" 2>/dev/null || echo "No ideas yet"; }
random() {
    LINES=$(wc -l < "$IDEAS_FILE" 2>/dev/null || echo 0)
    [ "$LINES" -gt 0 ] && sed -n "$((RANDOM % LINES + 1))p" "$IDEAS_FILE" || echo "No ideas"
}
case "$1" in
    capture) capture "$2" ;;
    list) list ;;
    random) random ;;
    *) echo "CECE-IDEA: capture <idea> | list | random" ;;
esac
