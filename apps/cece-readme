#!/bin/bash
# CECE-README v1.0 - README Generator
generate() {
    NAME="$1"
    DESC="$2"
    cat << RDEOF
# $NAME

$DESC

## Installation

\`\`\`bash
# Installation steps here
\`\`\`

## Usage

\`\`\`bash
# Usage examples here
\`\`\`

## License

MIT

---
Generated by CECE-README ðŸ–¤
RDEOF
}
case "$1" in
    generate) generate "$2" "$3" ;;
    *) echo "CECE-README: generate <name> <description>" ;;
esac
