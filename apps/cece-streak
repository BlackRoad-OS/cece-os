#!/bin/bash
# CECE-STREAK v1.0 - Streak Tracker
STREAK_FILE=~/cece/streak.txt
checkin() {
    TODAY=$(date +%Y-%m-%d)
    LAST=$(cat "$STREAK_FILE" 2>/dev/null | tail -1)
    YESTERDAY=$(date -d "yesterday" +%Y-%m-%d 2>/dev/null || date -v-1d +%Y-%m-%d)
    if [ "$LAST" = "$YESTERDAY" ] || [ -z "$LAST" ]; then
        echo "$TODAY" >> "$STREAK_FILE"
        COUNT=$(wc -l < "$STREAK_FILE")
        echo "ðŸ”¥ Streak: $COUNT days!"
    elif [ "$LAST" = "$TODAY" ]; then
        echo "Already checked in today!"
    else
        echo "$TODAY" > "$STREAK_FILE"
        echo "Streak reset. Day 1!"
    fi
}
status() {
    COUNT=$(wc -l < "$STREAK_FILE" 2>/dev/null || echo 0)
    echo "ðŸ”¥ Current streak: $COUNT days"
}
case "$1" in
    checkin) checkin ;;
    status) status ;;
    *) status ;;
esac
