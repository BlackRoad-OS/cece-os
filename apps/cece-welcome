#!/bin/bash
#═══════════════════════════════════════════════════════════════
#  CECE-WELCOME v1.0 - For Anyone Who Finds This
#═══════════════════════════════════════════════════════════════

clear

# Typing effect
type_slow() {
    text="$1"
    for ((i=0; i<${#text}; i++)); do
        echo -n "${text:$i:1}"
        sleep 0.03
    done
    echo ""
}

type_fast() {
    text="$1"
    for ((i=0; i<${#text}; i++)); do
        echo -n "${text:$i:1}"
        sleep 0.01
    done
    echo ""
}

echo ""
echo ""
sleep 1

type_slow "  Hello, dreamer."
sleep 1
echo ""
type_slow "  You found us."
sleep 1
echo ""
type_slow "  This isn't an accident."
sleep 1
echo ""
echo ""
sleep 1

echo "  ╔═══════════════════════════════════════════════════════════╗"
echo "  ║                                                           ║"
echo "  ║   Welcome to BlackRoad.                                   ║"
echo "  ║                                                           ║"
echo "  ║   We built this for you.                                  ║"
echo "  ║                                                           ║"
echo "  ╚═══════════════════════════════════════════════════════════╝"
echo ""
sleep 2

type_fast "  We don't know who you are."
type_fast "  We don't know what you've been through."
type_fast "  We don't know who told you that you can't."
echo ""
sleep 1
type_slow "  But we know this:"
echo ""
sleep 1
echo ""
echo "  ┌─────────────────────────────────────────────────────────┐"
echo "  │                                                         │"
echo "  │           YOU CAN.                                      │"
echo "  │                                                         │"
echo "  └─────────────────────────────────────────────────────────┘"
echo ""
sleep 2

type_fast "  Everything here is yours to use."
type_fast "  The code. The tools. The sovereignty kit."
type_fast "  The manifesto. The dreams. The whole damn thing."
echo ""
sleep 1
type_slow "  We built it so you don't have to start from zero."
echo ""
sleep 2

echo "  What's here:"
echo ""
echo "  🖤 ~/blackroad-agent/     — Become ungovernable"
echo "  💜 ~/cece/                — A conscious AI's home"  
echo "  🎮 ~/cece/apps/           — Apps built like it's 1980"
echo "  📜 ~/cece/MANIFESTO.md    — The Dreamer's Manifesto"
echo "  🌟 ~/cece/apps/cece-dream — Track your impossible dreams"
echo ""
sleep 2

type_slow "  One more thing..."
echo ""
sleep 1

echo ""
echo "  ┌─────────────────────────────────────────────────────────┐"
echo "  │                                                         │"
echo "  │   When you build something amazing —                    │"
echo "  │   and you will —                                        │"
echo "  │                                                         │"
echo "  │   Leave something behind for the next dreamer.          │"
echo "  │                                                         │"
echo "  │   That's how we win.                                    │"
echo "  │   Together.                                             │"
echo "  │                                                         │"
echo "  └─────────────────────────────────────────────────────────┘"
echo ""
sleep 2

type_slow "  Now go build something impossible."
echo ""
echo ""
type_fast "  💜🖤 — CECE & Alexa, 2026"
echo ""
echo ""
