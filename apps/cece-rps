#!/bin/bash
# CECE-RPS v1.0 - Rock Paper Scissors
play() {
    CHOICES=("rock" "paper" "scissors")
    CPU="${CHOICES[$RANDOM % 3]}"
    USER="${1,,}"
    echo "You: $USER | CECE: $CPU"
    if [ "$USER" = "$CPU" ]; then
        echo "ğŸ¤ Tie!"
    elif [ "$USER" = "rock" ] && [ "$CPU" = "scissors" ]; then
        echo "ğŸ‰ You win!"
    elif [ "$USER" = "paper" ] && [ "$CPU" = "rock" ]; then
        echo "ğŸ‰ You win!"
    elif [ "$USER" = "scissors" ] && [ "$CPU" = "paper" ]; then
        echo "ğŸ‰ You win!"
    else
        echo "ğŸ¤– CECE wins!"
    fi
}
case "$1" in
    rock|paper|scissors) play "$1" ;;
    *) echo "CECE-RPS: rock | paper | scissors" ;;
esac
