#!/bin/bash
# CECE-POMODORO v1.0 - Pomodoro Timer
work() {
    echo "üçÖ Starting 25-minute work session..."
    sleep 1500
    echo "‚è∞ Work session complete! Take a 5-minute break."
}
short_break() {
    echo "‚òï 5-minute break starting..."
    sleep 300
    echo "‚è∞ Break over! Back to work."
}
long_break() {
    echo "üéâ 15-minute break starting..."
    sleep 900
    echo "‚è∞ Break over! Ready for more?"
}
case "$1" in
    work) work ;;
    short) short_break ;;
    long) long_break ;;
    *) echo "CECE-POMODORO: work | short | long" ;;
esac
