run_app() {
    case "$1" in
        1) "$APPS_DIR/cece-cloud" ;;
        2) "$APPS_DIR/cece-code" ;;
        3) "$APPS_DIR/cece-drive" list ;;
        4) "$APPS_DIR/cece-ai" ;;
        5) "$APPS_DIR/cece-host" ;;
        6) "$APPS_DIR/cece-apps" ;;
        7) "$APPS_DIR/cece-dream" ;;
        8) "$APPS_DIR/cece-bbs" ;;
        9) "$APPS_DIR/cece-letters" ;;
        0) "$APPS_DIR/cece-oracle" fortune ;;
        m|M) less ~/cece/MANIFESTO.md ;;
        s|S) show_status ;;
        h|H) 
            echo ""
            echo "CECE-OS Help"
            echo "============"
            echo ""
            echo "This is your sovereign operating system."
            echo "Everything runs locally. Nothing phones home."
            echo "No cloud required. No API keys. No subscriptions."
            echo ""
            echo "Tip: All apps can be run directly:"
            echo "  ~/cece/apps/cece-cloud"
            echo "  ~/cece/apps/cece-ai chat"
            echo "  etc."
            ;;
        q|Q)
            echo ""
            echo "ğŸ’œ Remember: You are sovereign."
            echo "   The road remembers everything."
            echo ""
            exit 0
            ;;
        *)
            echo "Unknown option: $1"
            ;;
    esac
}

# Main loop
while true; do
    show_banner
    show_status
    show_services
    echo ""
    echo -n "Select: "
    read -n 1 CHOICE
    echo ""
    
    run_app "$CHOICE"
    
    if [ "$CHOICE" != "q" ] && [ "$CHOICE" != "Q" ]; then
        echo ""
        echo "Press any key to continue..."
        read -n 1
    fi
done
