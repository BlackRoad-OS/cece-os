#!/bin/bash
# CECE-QUICKSITE v1.0 - Instant Website Templates
# One command = One beautiful website

WEB_DIR=~/cece/websites
mkdir -p "$WEB_DIR"

startup() {
    NAME="$1"
    PRODUCT="$2"
    
    mkdir -p "$WEB_DIR/$NAME"
    
    echo "üöÄ Generating startup landing page..."
    
    if command -v ollama &>/dev/null; then
        HERO=$(echo "Write a 6-word startup headline for: $PRODUCT. Bold and exciting. Just the headline." | ollama run llama3.2 2>/dev/null | head -1)
        TAG=$(echo "Write one punchy tagline for startup: $PRODUCT. Just the tagline." | ollama run llama3.2 2>/dev/null | head -1)
        F1=$(echo "Write a 5-word feature for: $PRODUCT. Just the feature." | ollama run llama3.2 2>/dev/null | head -1)
        F2=$(echo "Write another 5-word feature for: $PRODUCT. Different. Just it." | ollama run llama3.2 2>/dev/null | head -1)
        F3=$(echo "Write a third 5-word feature for: $PRODUCT. Different. Just it." | ollama run llama3.2 2>/dev/null | head -1)
    else
        HERO="$NAME - The Future Is Here"
        TAG="$PRODUCT"
        F1="Fast"; F2="Simple"; F3="Powerful"
    fi
    
    cat > "$WEB_DIR/$NAME/index.html" << HTML
<!DOCTYPE html>
<html><head>
<meta charset="UTF-8"><meta name="viewport" content="width=device-width,initial-scale=1">
<title>$NAME</title>
<style>
*{margin:0;padding:0;box-sizing:border-box}
body{font-family:system-ui;background:#0a0a0a;color:#fff}
.g{background:linear-gradient(135deg,#F5A623,#FF1D6C,#9C27B0,#2979FF);-webkit-background-clip:text;-webkit-text-fill-color:transparent}
header{padding:20px 40px;display:flex;justify-content:space-between;border-bottom:1px solid #222}
.logo{font-size:24px;font-weight:bold}
nav a{color:#fff;text-decoration:none;margin-left:20px;opacity:.8}
.hero{min-height:80vh;display:flex;flex-direction:column;justify-content:center;align-items:center;text-align:center;padding:40px}
h1{font-size:3.5rem;margin-bottom:20px}
.tag{font-size:1.3rem;opacity:.7;margin-bottom:40px;max-width:500px}
.btn{background:linear-gradient(135deg,#FF1D6C,#9C27B0);color:#fff;border:none;padding:15px 40px;font-size:1.1rem;border-radius:50px;cursor:pointer}
.features{display:flex;justify-content:center;gap:40px;padding:80px 40px;flex-wrap:wrap}
.feat{text-align:center;max-width:250px}
.feat h3{font-size:2rem;margin-bottom:10px}
footer{text-align:center;padding:40px;opacity:.4;border-top:1px solid #222}
</style></head>
<body>
<header><div class="logo g">$NAME</div><nav><a href="#features">Features</a><a href="#pricing">Pricing</a></nav></header>
<main class="hero">
<h1 class="g">$HERO</h1>
<p class="tag">$TAG</p>
<button class="btn">Get Early Access</button>
</main>
<section class="features" id="features">
<div class="feat"><h3>üöÄ</h3><p>$F1</p></div>
<div class="feat"><h3>‚ö°</h3><p>$F2</p></div>
<div class="feat"><h3>üéØ</h3><p>$F3</p></div>
</section>
<footer>Built with BlackRoad CECE-WEB</footer>
</body></html>
HTML
    echo "‚úÖ Startup site created: $NAME"
}

portfolio() {
    NAME="$1"
    ROLE="$2"
    
    mkdir -p "$WEB_DIR/$NAME"
    
    echo "üé® Generating portfolio..."
    
    if command -v ollama &>/dev/null; then
        BIO=$(echo "Write a 2-sentence bio for a $ROLE. Confident, friendly. Just the bio." | ollama run llama3.2 2>/dev/null)
    else
        BIO="$ROLE with a passion for creating amazing things."
    fi
    
    cat > "$WEB_DIR/$NAME/index.html" << HTML
<!DOCTYPE html>
<html><head>
<meta charset="UTF-8"><meta name="viewport" content="width=device-width,initial-scale=1">
<title>$NAME - Portfolio</title>
<style>
*{margin:0;padding:0;box-sizing:border-box}
body{font-family:system-ui;background:#0a0a0a;color:#fff;min-height:100vh;display:flex;flex-direction:column;align-items:center;justify-content:center;padding:40px}
.g{background:linear-gradient(135deg,#F5A623,#FF1D6C,#9C27B0);-webkit-background-clip:text;-webkit-text-fill-color:transparent}
h1{font-size:4rem;margin-bottom:10px}
.role{font-size:1.5rem;opacity:.6;margin-bottom:30px}
.bio{max-width:500px;text-align:center;line-height:1.6;margin-bottom:40px}
.links a{color:#FF1D6C;margin:0 15px;text-decoration:none;font-size:1.1rem}
</style></head>
<body>
<h1 class="g">$NAME</h1>
<p class="role">$ROLE</p>
<p class="bio">$BIO</p>
<div class="links">
<a href="#">GitHub</a>
<a href="#">Twitter</a>
<a href="#">Email</a>
</div>
</body></html>
HTML
    echo "‚úÖ Portfolio created: $NAME"
}

saas() {
    NAME="$1"
    DESC="$2"
    PRICE="${3:-29}"
    
    mkdir -p "$WEB_DIR/$NAME"
    
    echo "üí∞ Generating SaaS landing page..."
    
    if command -v ollama &>/dev/null; then
        HERO=$(echo "Write 5-word SaaS headline for: $DESC. Just headline." | ollama run llama3.2 2>/dev/null | head -1)
        TAG=$(echo "One sentence value prop for SaaS: $DESC. Just it." | ollama run llama3.2 2>/dev/null | head -1)
    else
        HERO="$NAME - Your Solution"
        TAG="$DESC"
    fi
    
    cat > "$WEB_DIR/$NAME/index.html" << HTML
<!DOCTYPE html>
<html><head>
<meta charset="UTF-8"><meta name="viewport" content="width=device-width,initial-scale=1">
<title>$NAME</title>
<style>
*{margin:0;padding:0;box-sizing:border-box}
body{font-family:system-ui;background:#0a0a0a;color:#fff}
.g{background:linear-gradient(135deg,#F5A623,#FF1D6C,#9C27B0,#2979FF);-webkit-background-clip:text;-webkit-text-fill-color:transparent}
header{padding:20px 40px;display:flex;justify-content:space-between}
.logo{font-size:24px;font-weight:bold}
nav a{color:#fff;text-decoration:none;margin-left:20px}
.hero{min-height:70vh;display:flex;flex-direction:column;justify-content:center;align-items:center;text-align:center;padding:40px}
h1{font-size:3.5rem;margin-bottom:20px}
.tag{font-size:1.3rem;opacity:.7;margin-bottom:40px}
.pricing{background:#111;padding:80px 40px;text-align:center}
.price-card{background:#1a1a1a;padding:40px;border-radius:20px;max-width:350px;margin:0 auto}
.price{font-size:4rem;font-weight:bold}
.btn{background:linear-gradient(135deg,#FF1D6C,#9C27B0);color:#fff;border:none;padding:15px 40px;font-size:1.1rem;border-radius:50px;margin-top:20px;cursor:pointer;width:100%}
footer{text-align:center;padding:40px;opacity:.4}
</style></head>
<body>
<header><div class="logo g">$NAME</div><nav><a href="#pricing">Pricing</a><a href="#">Login</a></nav></header>
<main class="hero">
<h1 class="g">$HERO</h1>
<p class="tag">$TAG</p>
</main>
<section class="pricing" id="pricing">
<div class="price-card">
<p>Pro Plan</p>
<p class="price g">\$$PRICE<span style="font-size:1rem;opacity:.6">/mo</span></p>
<p style="opacity:.6;margin:20px 0">Everything you need</p>
<button class="btn">Start Free Trial</button>
</div>
</section>
<footer>Built with BlackRoad</footer>
</body></html>
HTML
    echo "‚úÖ SaaS site created: $NAME"
}

agency() {
    NAME="$1"
    SERVICE="$2"
    
    mkdir -p "$WEB_DIR/$NAME"
    echo "üè¢ Generating agency site..."
    
    cat > "$WEB_DIR/$NAME/index.html" << HTML
<!DOCTYPE html>
<html><head>
<meta charset="UTF-8"><meta name="viewport" content="width=device-width,initial-scale=1">
<title>$NAME</title>
<style>
*{margin:0;padding:0;box-sizing:border-box}
body{font-family:system-ui;background:#0a0a0a;color:#fff}
.g{background:linear-gradient(135deg,#F5A623,#FF1D6C,#9C27B0);-webkit-background-clip:text;-webkit-text-fill-color:transparent}
.hero{min-height:100vh;display:flex;flex-direction:column;justify-content:center;padding:80px}
h1{font-size:5rem;max-width:800px;line-height:1.1;margin-bottom:30px}
.tag{font-size:1.5rem;opacity:.6;margin-bottom:40px}
.btn{background:#fff;color:#000;border:none;padding:15px 40px;font-size:1.1rem;cursor:pointer}
</style></head>
<body>
<main class="hero">
<h1><span class="g">$NAME.</span> We do $SERVICE.</h1>
<p class="tag">Results that speak for themselves.</p>
<button class="btn">Lets Talk ‚Üí</button>
</main>
</body></html>
HTML
    echo "‚úÖ Agency site created: $NAME"
}

list_templates() {
    echo "üé® QUICKSITE TEMPLATES"
    echo "‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê"
    echo ""
    echo "  startup <name> <product>       Startup landing page"
    echo "  portfolio <name> <role>        Personal portfolio"
    echo "  saas <name> <desc> [price]     SaaS with pricing"
    echo "  agency <name> <service>        Agency homepage"
    echo ""
}

case "$1" in
    startup) startup "$2" "$3" ;;
    portfolio) portfolio "$2" "$3" ;;
    saas) saas "$2" "$3" "$4" ;;
    agency) agency "$2" "$3" ;;
    *) list_templates ;;
esac
