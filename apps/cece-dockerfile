#!/bin/bash
# CECE-DOCKERFILE v1.0 - Dockerfile Generator
python() {
    echo "FROM python:3.11-slim
WORKDIR /app
COPY requirements.txt .
RUN pip install -r requirements.txt
COPY . .
CMD [\"python\", \"main.py\"]"
}
node() {
    echo "FROM node:18-alpine
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
CMD [\"npm\", \"start\"]"
}
case "$1" in
    python) python ;;
    node) node ;;
    *) echo "CECE-DOCKERFILE: python | node" ;;
esac
