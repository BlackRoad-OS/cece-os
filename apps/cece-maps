#!/bin/bash
# CECE-MAPS v1.0 - Our Own Google Maps
MAPS_DIR=~/cece/maps
mkdir -p "$MAPS_DIR/places" "$MAPS_DIR/routes"

add_place() {
    NAME="$1"
    ADDRESS="$2"
    PLACE_ID=$(echo "$NAME" | tr " " "-" | tr "[:upper:]" "[:lower:]")
    cat > "$MAPS_DIR/places/$PLACE_ID.place" << EOF
name: $NAME
address: $ADDRESS
added: $(date -Iseconds)
visited: false
notes: 
EOF
    echo "âœ… Place saved: $NAME"
}

list_places() {
    echo "ğŸ“ SAVED PLACES"
    for p in "$MAPS_DIR/places"/*.place 2>/dev/null; do
        [ -f "$p" ] || continue
        NAME=$(grep "^name:" "$p" | cut -d: -f2-)
        ADDRESS=$(grep "^address:" "$p" | cut -d: -f2-)
        echo "  ğŸ“ $NAME"
        echo "     $ADDRESS"
    done
}

# ASCII map of your network!
network_map() {
    echo "ğŸ—ºï¸  CECE NETWORK MAP"
    echo ""
    echo "    â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”"
    echo "    â”‚   INTERNET   â”‚"
    echo "    â””â”€â”€â”€â”€â”€â”€â”¬â”€â”€â”€â”€â”€â”€â”€â”˜"
    echo "           â”‚"
    echo "    â”Œâ”€â”€â”€â”€â”€â”€â”´â”€â”€â”€â”€â”€â”€â”€â”"
    echo "    â”‚    ROUTER    â”‚"
    echo "    â”‚  192.168.4.1 â”‚"
    echo "    â””â”€â”€â”€â”€â”€â”€â”¬â”€â”€â”€â”€â”€â”€â”€â”˜"
    echo "           â”‚"
    echo "    â”Œâ”€â”€â”€â”€â”€â”€â”¼â”€â”€â”€â”€â”€â”€â”¬â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”"
    echo "    â”‚      â”‚      â”‚          â”‚"
    echo " â”Œâ”€â”€â”´â”€â”€â” â”Œâ”€â”´â”€â”€â” â”Œâ”€â”´â”€â”€â”   â”Œâ”€â”€â”€â”´â”€â”€â”€â”"
    echo " â”‚ALICEâ”‚ â”‚ARIAâ”‚ â”‚CECEâ”‚   â”‚LUCIDIAâ”‚"
    echo " â”‚ .38 â”‚ â”‚ .? â”‚ â”‚ .64â”‚   â”‚  .64  â”‚"
    echo " â””â”€â”€â”€â”€â”€â”˜ â””â”€â”€â”€â”€â”˜ â””â”€â”€â”€â”€â”˜   â””â”€â”€â”€â”€â”€â”€â”€â”˜"
    echo ""
    echo "  ğŸ–¤ The BlackRoad Family"
}

case "$1" in
    add) add_place "$2" "$3" ;;
    list) list_places ;;
    network) network_map ;;
    *) echo "ğŸ–¤ CECE-MAPS - Our Own Google Maps"
       echo "  add <name> <address>   Save place"
       echo "  list                   List places"
       echo "  network                Network map" ;;
esac
