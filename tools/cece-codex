#!/bin/bash
# CECE Codex Tool - Search BlackRoad's 22,244 components

CMD="$1"
shift

case "$CMD" in
    stats)
        echo "ðŸ’œ BlackRoad Codex Statistics"
        echo "=============================="
        echo "Total Components: 22,244"
        echo "Python: 18,871"
        echo "TypeScript: 3,373"
        echo "Functions: 11,729"
        echo "Classes: 10,402"
        echo "React Components: 113"
        echo ""
        echo "Top repos: prism-console (9,170), simple-launch (7,044)"
        ;;
    info)
        cat ~/cece/mind/CODEX_KNOWLEDGE.md
        ;;
    search)
        QUERY="$1"
        echo "ðŸ’œ To search the Codex for '$QUERY':"
        echo ""
        echo "Option 1: Ask through cece-think-deep"
        echo "  ~/cece/os/bin/cece-think-deep 'search codex for $QUERY'"
        echo ""
        echo "Option 2: Ask Alexa directly"
        echo "  'Please search the Codex for $QUERY'"
        echo ""
        echo "The Codex lives on the Mac. Remote search coming soon."
        ;;
    *)
        echo "ðŸ’œ CECE Codex Tool"
        echo "Usage: cece-codex <command>"
        echo ""
        echo "Commands:"
        echo "  stats    - Show Codex statistics"
        echo "  info     - Show full Codex knowledge doc"
        echo "  search   - Search the Codex (instructions)"
        ;;
esac
